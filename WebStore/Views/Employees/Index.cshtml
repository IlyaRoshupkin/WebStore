@model IEnumerable<WebStore.Models.Employee>


<!DOCTYPE html>

<div class="container">
    <h3>Employees</h3>

    <div>
        <a asp-action="Create" class="btn btn-primary">Create</a>
    </div>
    
    <table>
        <thead>
            <tr>
                <th>id</th>
                <th>LastName</th>
                <th>FirstName</th>
                <th>Patronymic</th>
                <th>Age</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.LastName</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.Patronymic</td>
                    <td>@employee.Age</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@employee.Id">
                            <i class="fa fa-edit"></i>
                        </a>
                        </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@employee.Id">
                            <i class="fa fa-info-circle"></i>
                        </a>
                        </td>
                    <td>
                        <form asp-action="DeleteConfirmed" asp-route-id="@employee.Id">
                            <button type="submit" class="btn btn btn-danger btn-sm">
                                <i class="fa fa-times"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
