@model Employee

<div class="container">
    <h3>Employee</h3>
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>@Model.Id</dd>

        <dt>Last Name</dt>
        <dd>@Model.LastName</dd>

        <dt>First Name</dt>
        <dd>@Model.FirstName</dd>

        <dt>Patronymic</dt>
        <dd>@Model.Patronymic</dd>

        <dt>Age</dt>
        <dd>@Model.Age</dd>
    </dl>
    <hr />
    <a asp-action="Index" class="btn btn-default"></a>
</div>